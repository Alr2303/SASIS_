<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/digit_speed_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:scaleType="center">

    <TextView
        android:id="@+id/digit_speed_bg"
        android:text="888"
        android:includeFontPadding="false"
        android:textColor="#000"
        android:textSize="80sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/digit_speed"
        android:text="0"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:layout_alignRight="@+id/digit_speed_bg"
        android:layout_alignEnd="@+id/digit_speed_bg"
        android:shadowColor="#0092db"
        android:textColor="#0092db"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:gravity="center"
        android:textSize="80sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/digit_speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/digit_speed_bg"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_marginStart="-91dp"
        android:layout_marginLeft="-91dp"
        android:layout_marginBottom="-26dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toEndOf="@+id/digit_speed_bg"
        android:layout_toRightOf="@+id/digit_speed_bg"
        android:includeFontPadding="false"
        android:shadowColor="#0092db"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:text="km/h"
        android:textColor="#0092db"
        android:textSize="20sp" />

</RelativeLayout>